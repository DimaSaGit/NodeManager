@model NodeManager.Web.Models.CategorySection

@{
    ViewData["Title"] = "Menu";
}

<div class="nav_filters">
    <div class="scroll">
    <ul class="accordion-menu">
        @foreach (var category in Model.Menu)
        {
        <li>
            <div class="dropdownlink">
                <a class="but_category" href="/Node/List/@category.Key.Name">@category.Key.Name<span class="fa-solid fa-caret-down fa-xs"></span></a>
            </div>
        
            <ul class="submenu">
                @if (category.Key.Id == Model.SelectedSection)
                {
                    @foreach (var subcategory in category.Value)
                    {
                        <li>
                            <a class="but_subcategory" href="/Node/List/@category.Key.Name/@subcategory.Name">@subcategory.Name</a>
                        </li>
                    }
                }
            </ul>
        </li>
        }
    </ul>
    </div>
    <div class="plug">
        <p>Заглушка</p>
    </div>
</div>