@model NodeManager.Web.Models.FamSymbolViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Менеджер узлов</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <main class="containerNode">
        <div class="headerNode">
           <p class="title">@Model._familySymbol.Name</p>
           <div class="but_group">
                @if (Model.userName == null)
                {
                    <button class="b_download" onclick="" title="Ñêà÷àòü"><span class="fa-solid fa-download"></span></button>
                }
                else
                {
                    <button class="b_download" onclick="" title="Ñêà÷àòü"><span class="fa-solid fa-download"></span></button>
                    <button class="b_edit" onclick="" title="Ðåäàêòèðîâàòü"><span class="fa-solid fa-pencil"></span></button>
                    <button class="b_delete" onclick="/Node/Delete/@Model._familySymbol.Id" title="Óäàëèòü"><span class="fa-solid fa-trash"></span></button>
                }
           </div>
           <div class="but_close">
               <button class="b_close" onclick="" title="Çàêðûòü"><span class="fas fa-times"></span></button>
           </div>
        </div>
        <div class="contentNode">
            <div class=param_section>
                <div class="scroll">
                    <table class="parameters" style="border-radius: 30px;">
                    <thead class="paramHead">
                        <tr>
                            <th class="headTable">Íàçâàíèå</th>
                            <th class="headTable">Çíà÷åíèå</th>
                        </tr>
                    </thead>
                    <tbody class="paramBody">
                        @foreach (var parameter in Model._revitParameters)
                        {
                            <tr>
                                <td class="parameter_name">@parameter.Name</td>
                                <td class="parameter_value">@parameter.Value</td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
                <div class="plug">
                    <p>Çàãëóøêà</p>
                </div>
            </div>
            <div class="node_picture">
                <img class="nodePic" src="data:image/jpg;base64,@FamSymbolViewModel.ImageByteToBase64ImageTag(Model._familySymbol.Image)"/>
            </div>
        </div>
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @*await RenderSectionAsync("Scripts", required: false)*@
</body>
</html>
